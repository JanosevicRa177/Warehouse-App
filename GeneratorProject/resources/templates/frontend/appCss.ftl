.navbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #333; 
  color: #fff;
  padding: 10px;
}

.nav-item {
  cursor: pointer;
  padding: 8px 12px;
  border-radius: 4px;
  transition: background-color 0.3s;
}

.nav-item:hover {
  background-color: #555;
}